
@model ASM1.Models.Product
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/Form.css" rel="stylesheet">
<h4> Create Product</h4>
<hr />
<div class="container">
    <form asp-action="Create" enctype="multipart/form-data" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-25">
                <label>Product Name:</label>
            </div>
            <div class="col-75">
                <input asp-for="Name" class="form-control" placeholder="Product name..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-25">
                <label>Product img:</label>
            </div>
            <div class="col-75">
                <input asp-for="img" class="form-control" placeholder="Product img..." />
                <span asp-validation-for="img" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-25">
                <label>Product price:</label>
            </div>
            <div class="col-75">
                <input asp-for="price" class="form-control" placeholder="Product price..." />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-25">
                <label>Product quantity:</label>
            </div>
            <div class="col-75">
                <input asp-for="quantity" class="form-control" placeholder="Product quantity..." />
                <span asp-validation-for="quantity" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-25">
                <label asp-for="AuthorId" class="control-label">author: </label>
            </div>
            <div class="col-75">
                <select class="form-select" asp-items="ViewBag.AuthorId" asp-for="AuthorId">
                    <option value="null"> --- Please select author for product --- </option>
                </select>
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-25">
                <label asp-for="CategoryId" class="control-label">category: </label>
            </div>
            <div class="col-75">
                <select class="form-select" asp-items="ViewBag.CategoryId" asp-for="CategoryId">
                    <option value="null"> --- Please select category for product --- </option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>

       
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" style="margin-right: -10px;margin-bottom: 10px" />
            <a asp-action="Index" class="btn btn-outline-success" style="margin-bottom: 10px">Back to List</a>
        </div>
    </form>
</div>
}
